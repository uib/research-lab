kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: kube-cm
rules:
- apiGroups:
  - '*'
  resources:
  - '*'
  verbs:
  - get
  - list
  - watch
  - create
  - update
  - patch
  - delete
  - deletecollection
- nonResourceURLs:
  - '*'
  verbs:
  - get
  - list
  - watch
  - create
  - update
  - patch
  - delete
  - deletecollection

---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: kube-cm
subjects:
{% for host in groups['masters'] %}
{%- if cluster_name == hostvars[host]['cluster_name'] %}
  - kind: User
    name: "{{ host }}-cm"
{% endif %}
{% endfor %}
roleRef:
  kind: ClusterRole
  name: kube-cm
  apiGroup: rbac.authorization.k8s.io
